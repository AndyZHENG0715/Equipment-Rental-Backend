<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Rent it!</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <%- include('navbar') %>

    <div class="container">
        <nav style="--bs-breadcrumb-divider: '/';" aria-label="breadcrumb" class="col">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/users">Users</a></li>
                <li class="breadcrumb-item active" aria-current="page">Edit</li>
            </ol>
        </nav>
        <div class="d-flex justify-content-end my-2">
            <form action="/users/delete/<%= users._id %>" method="post">
                <button class="btn btn-danger btn-lg" type="submit">Delete</button>
            </form>
        </div>
    </div>

    <form class="container" method="POST" action="/users/edit/<%= users._id %>">
        <div class="col-md-6 mt-4">
            <label for="userEmail" class="form-label">Email</label>
            <input type="email" class="form-control" id="userEmail" name="userEmail" value="<%= users.userEmail %>" required>
        </div>
        <div class="col-md-6 mt-3">
            <label for="password" class="form-label">Reset Password</label>
            <input type="password" class="form-control" id="password" name="password" required>
        </div>        
        <div class="col-md-6 mt-3">
            <label for="userName" class="form-label">Name</label>
            <input type="text" class="form-control" id="userName" name="userName" value="<%= users.userName %>" required>
        </div>
        <div class="col-md-6 mt-3">
            <label for="contactNum" class="form-label">Contact Number</label>
            <input type="tel" class="form-control" id="contactNum" name="contactNum" value="<%= users.contactNum %>" required>
        </div>
        <div class="col-md-6 mt-3">
            <label for="department" class="form-label">Department</label>
            <select id="department" class="form-select" aria-label="Default select example" name="department">
                <option value="" selected>Select Department</option>
                <option value="biology" <%= users.department === 'biology' ? 'selected' : '' %>>Biology</option>
                <option value="chemistry" <%= users.department === 'chemistry' ? 'selected' : '' %>>Chemistry</option>
                <option value="computerScience" <%= users.department === 'computerScience' ? 'selected' : '' %>>Computer Science</option>
                <option value="math" <%= users.department === 'math' ? 'selected' : '' %>>Math</option>
                <option value="physic" <%= users.department === 'physic' ? 'selected' : '' %>>Physic</option>
            </select>
        </div>

        <div class="col-md-6 mt-3">
            <label for="remark" class="form-label">Remark</label>
            <textarea class="form-control" id="remark" rows="5" name="remark"><%= users.remark %></textarea>
        </div>

        <div class="form-check mt-3">
            <input class="form-check-input" type="checkbox" id="terms" name="terms" <%= users.terms ? 'checked' : '' %>>
            <label class="form-check-label" for="terms">
                Agree to terms and conditions
            </label>
        </div>

        <div class="col-12 mt-3">
            <button type="submit" class="btn btn-primary btn-lg">Save</button>
        </div>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>