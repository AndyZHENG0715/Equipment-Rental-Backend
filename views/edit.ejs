<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Rent it!</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
  <%- include('navbar') %>

  <div class="container-fluid mt-3">
    <div class="d-flex justify-content-between align-items-center">
      <nav style="--bs-breadcrumb-divider: '/';" aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/equipments" class="text-decoration-none">Equipments</a></li>
          <li class="breadcrumb-item active" aria-current="page">Edit</li>
        </ol>
      </nav>
    </div>
  </div>

  <div class="container-fluid mt-0">
    <form action="/equipment/edit/<%= equipment._id %>" method="post">
      <!-- Name Field -->
      <div class="row mb-3">
        <div class="col">
          <label for="equipmentName" class="form-label">Name</label>
          <input type="text" class="form-control" id="equipmentName" name="equipmentName" value="<%= equipment.name %>" required>
        </div>
        <!-- Location Field -->
        <div class="col">
          <label for="equipmentLocation" class="form-label">Location</label>
          <select class="form-select" id="equipmentLocation" name="equipmentLocation" required>
            <option value="FSC801C" <%= equipment.location === 'FSC801C' ? 'selected' : '' %>>FSC801C</option>
            <option value="FSC801D" <%= equipment.location === 'FSC801D' ? 'selected' : '' %>>FSC801D</option>
            <option value="FSC901E" <%= equipment.location === 'FSC901E' ? 'selected' : '' %>>FSC901E</option>
          </select>
        </div>
      </div>
      <!-- Description Field -->
      <div class="mb-3">
        <label for="equipmentDescription" class="form-label">Description</label>
        <textarea class="form-control" id="equipmentDescription" name="equipmentDescription" rows="3" required><%= equipment.description %></textarea>
      </div>
      <!-- Image URL Field -->
      <div class="row mb-3">
        <div class="col-12 col-md-6">
          <label for="equipmentImage" class="form-label">Image URL</label>
          <input type="text" class="form-control" id="equipmentImage" name="equipmentImage" value="<%= equipment.imageUrl %>">
        </div>
        <!-- Contact Person Field -->
        <div class="col-12 col-md-6">
          <label for="editorName" class="form-label">Contact Person</label>
          <input type="text" class="form-control" id="editorName" name="editorName" value="<%= equipment.editorName %>">
        </div>
      </div>
      <!-- Color Field -->
      <div class="row mb-3">
        <div class="col-md-2">
          <label for="equipmentColor" class="form-label">Color</label>
          <input type="color" class="form-control form-control-color" id="equipmentColor" name="equipmentColor" value="<%= equipment.color %>" style="width: 100%">
        </div>
      </div>
      <!-- Highlight Checkbox -->
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="equipmentHighlight" id="equipmentHighlight" <%= equipment.highlight ? 'checked' : '' %>>
        <label class="form-check-label" for="equipmentHighlight">
          Highlight
        </label>
      </div>
      <!-- Submit and Delete Buttons -->
      <div class="row mt-3">
        <div class="col-md-6 d-flex justify-content-start">
          <button type="submit" class="btn btn-primary me-md-2">Save</button>
        </div>
        <div class="col-md-6 d-flex justify-content-end">
          <a href="/equipment/delete/<%= equipment._id %>" class="btn btn-danger">Delete</a>
        </div>
      </div>
    </form>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>
</html>
