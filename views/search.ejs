<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Search Results - Rent it!</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
  <%- include('navbar') %>

  <div class="container mt-3">
    <h2>Search Results for "<%= query %>"</h2>
    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } else if (equipments.length > 0) { %>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        <% equipments.forEach(function(equipment) { %>
          <div class="col">
            <div class="card">
              <a href="/equipment/detail/<%= equipment._id %>">
                <img src="<%= equipment.imageUrl %>" class="card-img-top" alt="<%= equipment.name %>" style="height:200px; object-fit: cover;">
              </a>
              <div class="card-body">
                <h5 class="card-title"><%= equipment.name %>@<%= equipment.location %></h5>
                <p class="card-text"><%= equipment.description %></p>
                <a href="/equipment/detail/<%= equipment._id %>" class="btn btn-primary">View Details</a>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <p>No equipment found matching your search.</p>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>
</html>