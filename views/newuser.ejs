<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Rent it!</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
  <%- include('navbar') %>

  <div class="container">
    <nav style="--bs-breadcrumb-divider: '/';" aria-label="breadcrumb" class="col">
      <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a href="/users">Users</a></li>
        <li class="breadcrumb-item active" aria-current="page">New</li>
      </ol>
    </nav>
  </div>

  <form class="container" method="POST" action="/users">
    <div class="col-md-6 mt-4">
      <label for="email" class="form-label">Email</label>
      <input type="email" class="form-control" id="email" name="email" required>
    </div>
    <div class="col-md-6 mt-3">
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control" id="password" name="password" required>
    </div>
    <div class="col-md-6 mt-3">
      <label for="name" class="form-label">Name</label>
      <input type="text" class="form-control" id="name" name="name" required>
    </div>
    <div class="col-md-6 mt-3">
      <label for="contactNum" class="form-label">Contact Number</label>
      <input type="tel" class="form-control" id="contactNum" name="contactNum" required>
    </div>
    <div class="col-md-6 mt-3">
      <label for="department" class="form-label">Department</label>
      <select id="department" class="form-select" aria-label="Default select example" name="department">
        <option value="" selected>Select Department</option>
        <option value="biology">Biology</option>
        <option value="chemistry">Chemistry</option>
        <option value="computerScience">Computer Science</option>
        <option value="math">Math</option>
        <option value="physic">Physic</option>
      </select>
    </div>
    <div class="col-md-6 mt-3">
      <label for="remark" class="form-label">Remark</label>
      <textarea class="form-control" id="remark" rows="5" name="remark"></textarea>
    </div>

    <div class="form-check mt-3">
      <input class="form-check-input" type="checkbox" id="terms" name="terms">
      <label class="form-check-label" for="terms">
        Is Administrator
      </label>
    </div>

    <div class="col-12 mt-3">
      <button type="submit" class="btn btn-primary btn-lg">Save</button>
    </div>
  </form>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>
</html>